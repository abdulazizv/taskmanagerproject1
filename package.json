{
  "name": "koa-task-manager",
  "version": "1.0.0",
  "description": "A task management application built with Koa.js and TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/src/index.js",
    "build": "tsc",
    "dev": "node --loader ts-node/esm ./src/index.ts",
    "db:migrate": "npx run drizzle-kit generate:mysql",
    "migrate": "node --loader ts-node/esm --watch . ./database/migration.ts"
  },
  "keywords": [
    "koa",
    "typescript",
    "drizzle-orm",
    "mysql",
    "task-manager"
  ],
  "author": "Abdulaziz Bozorov",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.30.4",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.1",
    "lodash": "^4.17.21",
    "mysql2": "^3.9.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/koa": "^2.13.7",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.8",
    "@types/lodash": "^4.17.0",
    "@types/node": "^16.9.0",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.4.4"
  }
}
