{
  "name": "koa-task-manager",
  "version": "1.0.0",
  "description": "A task management application built with Koa.js and TypeScript",
  "main": "dist/index.js",
  "type":"module",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "db:migrate":"npx run drizzle-kit generate:mysql",
    "migrate": "node dist/database/migration.js"
  },
  "keywords": [
    "koa",
    "typescript",
    "drizzle-orm",
    "mysql",
    "task-manager"
  ],
  "author": "Abdulaziz Bozorov",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.30.4",
    "koa": "^2.15.2",
    "mysql2": "^3.9.3"
  },
  "devDependencies": {
    "@types/koa": "^2.13.7",
    "@types/node": "^16.9.0",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.4"
  }
}
